<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Hotel Chatbot</title>
  <!-- External CSS link -->
  <link rel="stylesheet" href="/styles.css">

  <style>
    /* Internal CSS for chatbot interface */
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    #chat-container {
      width: 400px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
      display: flex;
      flex-direction: column;
      height: 80vh; /* Set maximum height for chat history */
    }

    #chat-history {
      overflow-y: auto;
      flex-grow: 1; /* Allow chat history to grow and scroll */
    }

    .message {
      margin: 10px;
      padding: 10px;
      border-radius: 8px;
      background-color: #f2f2f2;
    }

    .user-message {
      align-self: flex-end;
      background-color: #007bff;
      color: #fff;
    }

    .chatbot-message {
      align-self: flex-start;
      background-color: #eee;
    }

    #chat-form {
      margin-top: 10px;
      display: flex;
      flex-direction: column;
    }

    #chat-form label {
      margin-bottom: 5px;
      color: #333;
    }

    #chat-form input[type="text"] {
      padding: 8px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    #chat-form button {
      padding: 10px;
      font-size: 16px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    #chat-form button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <!-- <h1>Hotel Chatbot</h1> -->
  
  <div id="chat-container">
    <div id="chat-history" class="scrollbar">
      <!-- Chat messages will be dynamically inserted here -->
    </div>
    <form id="chat-form">
      <label for="message">Ask a question:</label><br>
      <input type="text" id="message" name="message"><br><br>
      <button type="submit">Submit</button>
    </form>
  </div>

  <script>
    const form = document.getElementById('chat-form');
    const chatHistory = document.getElementById('chat-history');

    form.addEventListener('submit', async function(event) {
      event.preventDefault();
      
      const formData = new FormData(form);
      const message = formData.get('message');

      if (message.trim().toLowerCase() === 'exit') {
        addMessage('You:', 'Chatbot session ended.');
        return;
      }

      const response = await fetch('/ask', {
        method: 'POST',
        body: new URLSearchParams(formData)
      });

      const data = await response.json();
      addMessage('You:', message);
      addMessage('Chatbot:', data.response);

      form.reset();
    });

    function addMessage(sender, message) {
      const messageDiv = document.createElement('div');
      messageDiv.classList.add('message');
      messageDiv.classList.add(sender === 'You:' ? 'user-message' : 'chatbot-message');
      messageDiv.innerHTML = `
        <p>${sender} ${message}</p>
      `;
      chatHistory.appendChild(messageDiv);

      // Scroll to bottom of chat history
      chatHistory.scrollTop = chatHistory.scrollHeight;
    }
  </script>
</body>
</html>
