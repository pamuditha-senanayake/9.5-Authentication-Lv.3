<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notification Demo</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
  <style>
    .swal-icon--success__line {
      animation: animateSuccessLine 0.75s;
    }
    .swal-icon--error__line {
      animation: animateErrorLine 0.75s;
    }
    @keyframes animateSuccessLine {
      0% { stroke-dashoffset: 65; }
      100% { stroke-dashoffset: 0; }
    }
    @keyframes animateErrorLine {
      0% { stroke-dashoffset: 65; }
      100% { stroke-dashoffset: 0; }
    }
  </style>
</head>
<body>
  <h1>Notification Demo</h1>
  <button onclick="triggerSuccess()">Success</button>
  <button onclick="triggerError()">Error</button>

  <script>
    function triggerSuccess() {
      fetch('/success')
        .then(response => response.json())
        .then(data => {
          if (data.status === 'success') {
            swal({
              title: 'Success!',
              text: data.message,
              icon: 'success',
              button: 'OK',
              className: 'swal-icon--success__line'
            });
          }
        });
    }

    function triggerError() {
      fetch('/error')
        .then(response => response.json())
        .then(data => {
          if (data.status === 'error') {
            swal({
              title: 'Error!',
              text: data.message,
              icon: 'error',
              button: 'OK',
              className: 'swal-icon--error__line'
            });
          }
        });
    }
  </script>
</body>
</html>
